# ==============================================
# CONSOLIDATED ENVIRONMENT CONFIGURATION
# ==============================================
# This single .env file configures all services
# Copy this file to .env and update values as needed

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# Used by PostgreSQL container and Laravel backend
DB_DATABASE=products_db
DB_USERNAME=postgres
DB_PASSWORD=postgres

# ==============================================
# BACKEND (Laravel) CONFIGURATION
# ==============================================

# Application
APP_NAME="Gerenciador de  Produtos"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Locale
APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=pt_BR
APP_FAKER_LOCALE=pt_BR

# Database Connection
# Note: DB_HOST=db uses Docker service name for internal network communication
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432

# Security
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug

# Session & Cache
SESSION_DRIVER=database
SESSION_LIFETIME=120
CACHE_STORE=database
QUEUE_CONNECTION=database

# Sanctum (API Authentication)
SANCTUM_STATEFUL_DOMAINS=localhost:3000,localhost

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Mail (for development)
MAIL_MAILER=log
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ==============================================
# FRONTEND (Vue) CONFIGURATION
# ==============================================
# API endpoint for frontend to communicate with backend
VITE_API_URL=http://localhost:8000/api
